<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.7"
	client="site"
	method="upgrade">
	<name>mod_display_article</name>
	<author>Daniel H Pavey</author>
	<creationDate>November 2011</creationDate>
	<copyright>East Devon IT</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>dan@eastdevon.it</authorEmail>
	<authorUrl>www.eastdevonit.co.uk</authorUrl>
	<version>1.7.0</version>
	<description>Simple module to pull specified article contents into a module</description>
	<files>
		<filename module="mod_display_article">mod_display_article.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_display_article.xml</filename>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="articleid"
					type="text"
					default=""
					size="10"
					label="Article ID"
					description="Define the article ID" >
					</field>
					
					<field
					name="length"
					type="text"
					default="0"
					size="10"
					label="Length"
					description="Limit number of characters displays (0 means no limit)" >
					</field>
					
					<field
					name="modclasssuffix"
					type="text"
					default=""
					size="10"
					label="Module Class Suffix"
					description="Module Class Suffix" >
					</field>

			</fieldset>
		</fields>
	</config>
</extension>
